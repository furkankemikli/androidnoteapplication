<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="sp2016.cs310.com.hw2furkankemikli.activity.MainActivity">

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="NEW NOTE"
        android:id="@+id/btnNewNote"
        android:layout_centerHorizontal="true"
        android:onClick="newnote"/>

    <ListView
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_above="@+id/btnAbout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>

    <RelativeLayout
        android:id="@+id/child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAbout"
            android:text="ABOUT"
            android:layout_width="175dp"
            android:layout_height="60dp" android:onClick="about"
            android:layout_alignTop="@+id/btnHome"
            android:layout_toRightOf="@+id/btnHome"
            android:layout_toEndOf="@+id/btnHome" />

        <Button
            android:id="@+id/btnHome"
            android:text="HOME"
            android:layout_width="175dp"
            android:layout_height="60dp" android:onClick="home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</LinearLayout>
